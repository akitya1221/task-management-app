<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" rel="stylesheet" href="css/main.css">
    <script src="js/main.js"></script>
    <title>Form</title>
</head>
<body>
    <div id="task-form">
        <h1>新規タスク</h1>
        <h2>入力フォーム</h2>
        <form action="/form" method="POST">
            <div class="input-user">
                <label>担当者：</label><br>
                <% users.forEach (value => { %>
                    <input class="user" type="radio" name="user" value="<%= value.id %>" required="required"><%= value.name %><br>
                <% }); %>
            </div>
            <div class="input-task"></div>
                <label>タスク内容：</label><br>
                <input type="text" name="txt" required="required"><br>
                <button class="add-btn" type="submit" onclick="addAlert()">送信</button>
            </div>
        </form>
    </div>
</body>
</html>